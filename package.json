{
  "name": "buenavisit-tourism-fullstack",
  "version": "1.0.0",
  "description": "Full-Stack Tourism Platform for Buenavista, Agusan del Sur",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "start": "node server/index.js",
    "setup": "node scripts/setup-env.js",
    "generate-secret": "node scripts/generate-jwt-secret.js",
    "seed": "node server/seeders/seed.js",
    "check-mongo": "node scripts/check-mongo.js",
    "diagnose": "node scripts/diagnose-network.js",
    "set-admin": "node scripts/set-admin-role.js"
  },
  "keywords": [
    "tourism",
    "fullstack",
    "react",
    "nodejs"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google/genai": "^1.28.0",
    "@supabase/supabase-js": "^2.87.1",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "firebase": "^12.5.0",
    "firebase-admin": "^13.5.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "pg": "^8.16.3",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "baseline-browser-mapping": "^2.9.11",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
